<Window x:Class="Organaizer.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить задачу" 
        Height="450" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="15" VerticalAlignment="Center">
        <Label Content="Название задачи:" FontWeight="Bold"/>
        <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0 5 0 15"
                 FontSize="14"/>

        <Label Content="Описание:" FontWeight="Bold"/>
        <TextBox Text="{Binding Description, Mode=TwoWay}" 
                 Height="80" 
                 Margin="0 5 0 15"
                 FontSize="14"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"/>

        <Label Content="Дата выполнения:" FontWeight="Bold"/>
        <DatePicker SelectedDate="{Binding DueDate, Mode=TwoWay}"
                    Margin="0 5 0 15"
                    FontSize="14"/>

        <Label Content="Приоритет:" FontWeight="Bold"/>
        <ComboBox SelectedValue="{Binding Priority, Mode=TwoWay}"
                  SelectedValuePath="Content"
                  Margin="0 5 0 20"
                  FontSize="14">
            <ComboBoxItem>Высокий</ComboBoxItem>
            <ComboBoxItem>Средний</ComboBoxItem>
            <ComboBoxItem>Низкий</ComboBoxItem>
        </ComboBox>

        <Button Content="Сохранить задачу" 
                Click="SaveButton_Click" 
                Padding="15 5"
                FontSize="14"
                Background="#FF007ACC"
                Foreground="White"/>
    </StackPanel>
</Window>